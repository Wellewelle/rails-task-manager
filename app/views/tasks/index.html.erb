<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task_path(task.id) do %>
          <%= task.title %>
      <% end %>
      <%= link_to "Delete", tasks_destroy_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<h2><%= link_to "Add new task", tasks_new_path %></h2>
